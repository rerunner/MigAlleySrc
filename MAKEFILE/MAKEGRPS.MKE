### PATHS

SRC	=	SHAPES
DEST_SHP= 	SHAPES\SHPGRP
DEST_COM=	GAME\SHPBIN

SRC_ASC	=	$(SRC)\SHPSRC
SRC_GRP	=	$(SRC)\SHPSRC
SRC_DAT	=	$(SRC)\SHPDAT

### UTILITIES

SHPCNV	=	WSHPMKE.EXE
SHPSHD	=	SHADE3DS.EXE
SHPASM	=	TASMX.EXE
SHPLNK	=	TLINK.EXE
GRPMASH	=	WGROUP.EXE

### 3DS->SHP COMMAND LINE OPTIONS

V201CMMKSHP	=	/M_$(SRC)\MATERIAL.TXT /I_$(SRC)\IMAGEMAP.TXT /V2 /1cm /Complex
V204CMMKSHP	=	/M_$(SRC)\MATERIAL.TXT /I_$(SRC)\IMAGEMAP.TXT /V2 /4cm /Complex
V216CMMKSHP	=	/M_$(SRC)\MATERIAL.TXT /I_$(SRC)\IMAGEMAP.TXT /V2 /16cm /Complex
