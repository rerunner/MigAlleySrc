V204CMMKSHPD=	/M_$(SRC)\MATERIAL.TXT /I_$(SRC)\IMAGEMAP.TXT /V2 /4cm /Complex /Dead
V216CMMKSHPD=	/M_$(SRC)\MATERIAL.TXT /I_$(SRC)\IMAGEMAP.TXT /V2 /16cm /Complex /Dead

### MAIN BIT OF MAKEFILE
 
GROUP =		$(DEST_COM)\EMPTY.COM\
	$(DEST_COM)\KIMPO.COM\


ALLSHAPES: $(GROUP) 

$(GROUP):	$(SRC)\IMAGEMAP.RES $(SRC)\SHAPES.RES\
		$(SRC_GRP)\$*.grp
		$(GRPMASH) $(SRC_GRP)\$*.grp $(DEST_SHP)\$*.grp
		$(SHPASM) /t /i$(SRC) /kh16384 SHAPES\SHPGRP\$*.grp,M:\SHAPES\$*.obj
		$(SHPLNK) /t /x M:\SHAPES\$*.obj,M:\SHAPES\$*.bin
		copy M:\SHAPES\$*.bin $(DEST_COM)\$*.com


